{
  "name": "openconvert",
  "version": "0.1.0",
  "description": "All in one file converter app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-builder -w",
    "package-linux": "electron-builder -l"
  },
  "build": {
    "appId": "com.openconvert.app",
    "win": {
      "icon": "./icons/logo.ico",
      "target":"nsis-web"
    },
    "linux":{
      "target": "appimage"
    },
    "nsisWeb":{
      "allowToChangeInstallationDirectory": true,
      "oneClick":false
    }
  },
  "keywords": [
    "converter",
    "image-converter",
    "video-converter",
    "offline",
    "javascript",
    "electron",
    "hacktoberfest"
  ],
  "author": "utmp",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  }
}
